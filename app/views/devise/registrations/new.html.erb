<div class="row">
  <div class="col-md-8 col-md-offset-2 text-center">
  <% if params[:plan] == "2" %>
    <h1>Premium</h1>
    <p>Everything from the free plan plus access to profile contact information!</p>
  <% else %>
    <h1>Basic</h1>
    <p>Basic access to the community.</p>
  <% end %>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h2>Your Details</h2><br />
      <% if params[:plan] == "2" %>
        <%= render "premium_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>